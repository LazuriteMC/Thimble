{
  "schemaVersion": 1,
  "id": "thimble",
  "version": "${version}",

  "name": "Thimble",
  "description": "An improved entity behavior and data tracker system for Minecraft.",
  "authors": [
    "Lazurite Team"
  ],

  "contact": {
    "website": "https://lazurite.dev",
    "repo": "https://github.com/lazuritemc/thimble"
  },

  "license": "MIT",
  "icon": "assets/thimble/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "dev.lazurite.thimble.side.server.ServerInitializer"
    ],
    "client": [
      "dev.lazurite.thimble.side.client.ClientInitializer"
    ]
  },

  "mixins": [
    "thimble.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.16.x"
  },

  "suggests": {
    "flamingo": "*"
  },

  "custom": {
    "modmenu:api": true
  }
}
